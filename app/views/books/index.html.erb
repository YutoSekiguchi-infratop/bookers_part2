<% if @book.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'commons/user_info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, url:books_path, local:true do |f| %>
        <label for="inputTitle">Name</label>
        <%= f.text_field :title, id:"inputTitle", class: "mb-2" %>
        <label for="inputBody">Opinion</label>
        <%= f.text_area :body, rows:'3', id:'inputBody' %>
        <%= f.submit "Create Book", class: "btn btn-success mt-1" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th colspan="3">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= attachment_image_tag  book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td>
                <% if book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(book), class: "text-danger", method: :delete do %>
                      <i class="fas fa-heart"></i> <%= book.favorites.count %>
                    <% end %>
                  </p>
                <% else %>
                  <p>
                    <%= link_to book_favorites_path(book), class: "text-primary", method: :post do %>
                      <i class="fas fa-heart"></i> <%= book.favorites.count %>
                    <% end %>
                  </p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>